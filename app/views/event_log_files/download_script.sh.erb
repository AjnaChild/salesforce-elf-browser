#!/usr/bin/env sh

# A script to Download Event Log File
# Requires cURL http://curl.haxx.se/

<% @log_files.each do |log_file| %>
# Event Type: <%= log_file.EventType%>
# Log Date: <%= log_file.LogDate.to_date%>
# File Size (in Bytes): <%= number_with_delimiter(log_file.LogFileLength) %>
curl --compressed "<%= @instance_url %>/services/data/v32.0/sobjects/EventLogFile/<%= log_file.Id%>/LogFile" -H "Authorization: Bearer <%= @token %>" -o "<%= log_file.LogDate.to_date%>_<%= log_file.EventType%>.csv"
<% end %>